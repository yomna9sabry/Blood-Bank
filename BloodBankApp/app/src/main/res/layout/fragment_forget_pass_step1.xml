<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/ForgetFragmentTextInputPasswordFragmentImageView"
        android:layout_width="233dp"
        android:layout_height="183dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="43dp"
        android:src="@drawable/logo" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/ForgetFragmentTextInputPasswordFragmentTextInputPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_et"
        android:layout_marginTop="@dimen/dim8"
        android:layout_marginStart="@dimen/dim8"
        android:layout_marginEnd="@dimen/dim8"
        android:layout_below="@+id/ForgetFragmentTextInputPasswordFragmentImageView"
        android:layout_centerInParent="true"

        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Phone"
            android:padding="@dimen/dim8"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@id/ForgetFragmentTextInputPasswordFragmentSendBtn"
        android:layout_margin="@dimen/dim8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_below="@id/ForgetFragmentTextInputPasswordFragmentTextInputPhone"/>

</RelativeLayout>